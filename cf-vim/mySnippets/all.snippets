snippet qpro "qmake pro file"

QT += core gui
greaterThan(QT_MAJOR_VERSION, 4): QT += widgets

CONFIG  += c++11
TEMPLATE = app
#DESTDIR = $$(PWD)
TRANSLATIONS += lang/lang_zh_cn.ts	\
                lang/lang_en.ts

# debug, release, debug_and_release
CONFIG += debug
CONFIG -= release
debug{
    TARGET = ${1:project-name}
}
release {
    TARGET = $1
    DEFINES +=	QT_NO_WARNING_OUTPUT \
                QT_NO_DEBUG_OUTPUT
}

