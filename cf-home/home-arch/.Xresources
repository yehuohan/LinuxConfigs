!===============================================================================
! Xft
!===============================================================================
Xft.dpi: 120
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb


!===============================================================================
! xterm
!===============================================================================
xterm.termName: xterm-256color

! Molokai theme color
*xterm*background: #303030
*xterm*foreground: #d0d0d0
*xterm*cursorColor: #d0d0d0
*xterm*color0: #101010
*xterm*color1: #960050
*xterm*color2: #66aa11
*xterm*color3: #c47f2c
*xterm*color4: #30309b
*xterm*color5: #7e40a5
*xterm*color6: #3579a8
*xterm*color7: #9999aa
*xterm*color8: #303030
*xterm*color9: #ff0090
*xterm*color10: #80ff00
*xterm*color11: #ffba68
*xterm*color12: #5f5fee
*xterm*color13: #bb88dd
*xterm*color14: #4eb4fa
*xterm*color15: #d0d0d0

! font
xterm*faceName: DejaVu Sans Mono for Powerline:antialias=True:pixelsize=18
xterm*faceNameDoublesize: WenQuanYi Micro Hei Mono:antialias=True:pixelsize=17
xterm*faceSize: 13
xterm*scaleHeight: 1.0

! option
xterm*loginshell: true
xterm*scrollBar: false
xterm*rightScrollBar: true
xterm*cursorBlink: true
xterm*geometry: 80x36

xterm.locale:true
xterm.utf8: true
xterm*utf8Title:true

! key
xterm*eightBitInput: false
xterm*altSendsEscape: true

! clipboard
xterm*selectToClipboard: true
xterm*translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

